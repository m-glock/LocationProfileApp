<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- action bar -->
    <style name="ActionBarStyle" parent="@style/Widget.AppCompat.Toolbar">
        <item name="android:background">?attr/colorPrimary</item>
        <item name="colorControlNormal">@color/textColorLight</item>
    </style>
    <style name="ActionBarTitleStyle" parent="TextAppearance.AppCompat.Title">
        <item name="android:textColor">@color/textColorLight</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- buttons -->
    <style name="ButtonStyle" parent="Widget.AppCompat.Button.Colored">
        <item name="android:backgroundTint">?attr/colorPrimary</item>
        <item name="android:textColor">@color/textColorLight</item>
    </style>

    <style name="FloatingActionButtonStyle" parent="Widget.MaterialComponents.FloatingActionButton">
        <item name="backgroundTint">?attr/colorPrimaryDark</item>
        <item name="tint">?attr/colorOnPrimary</item>
    </style>

    <style name="NoFocusButton" parent="Widget.AppCompat.Button.Colored">
        <item name="android:background">@drawable/border_button</item>
        <item name="android:textColor">@color/textColorDark</item>
    </style>

    <style name="FocusButton" parent="Widget.AppCompat.Button.Colored">
        <item name="android:background">@drawable/filled_button</item>
        <item name="android:textColor">@color/textColorLight</item>
    </style>

    <style name="SecondaryButton" parent="Widget.AppCompat.Button.Colored">
        <item name="backgroundTint">@color/transparent</item>
        <item name="android:textColor">@color/textColorDark</item>
    </style>

    <!-- switches -->
    <style name="SwitchStyle" parent="Theme.AppCompat.Light">
        <item name="colorControlActivated">@color/teal</item>
    </style>
</resources>