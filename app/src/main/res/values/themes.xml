<resources>
    <style name="Theme.LocationProfileApp" parent="Theme.MaterialComponents.Light">

        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/teal</item>
        <item name="colorPrimaryDark">@color/teal_dark</item>
        <item name="colorPrimaryVariant">@color/teal_light</item>
        <item name="colorOnPrimary">@color/white</item>

        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/sand</item>
        <item name="colorSecondaryVariant">@color/sand_dark</item>
        <item name="colorOnSecondary">@color/black</item>

        <!-- Status and action bar -->
        <item name="android:actionBarStyle">@style/ActionBarStyle</item>

        <!-- basic styles -->
        <item name="android:colorBackground">@color/screenBackground</item>
        <item name="android:colorError">@color/error</item>

        <!-- text -->
        <item name="android:textColor">@color/textColorDark</item>

        <!-- buttons -->
        <item name="android:buttonStyle">@style/ButtonStyle</item>
        <item name="floatingActionButtonStyle">@style/FloatingActionButtonStyle</item>
    </style>
</resources>