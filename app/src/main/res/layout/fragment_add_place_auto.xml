<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingHorizontal="@dimen/fragment_padding_horizontal"
    android:paddingVertical="@dimen/fragment_padding_vertical"
    tools:context=".views.fragments.AddPlaceAutoFragment">

    <TextView
        android:id="@+id/automaticModeExplanationText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/add_place_automatic_explanation"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/placeTitleTextAutomatic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/input_margin_top"
        android:text="@string/add_place_title_label"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/automaticModeExplanationText" />

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/placeTitleInputAutomatic"
        android:layout_width="@dimen/add_place_input_width"
        android:layout_height="wrap_content"
        app:layout_constraintBaseline_toBaselineOf="@+id/placeTitleTextAutomatic"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/placeTimeTextAutomatic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/input_margin_top"
        android:text="@string/add_place_time_label"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/placeTitleTextAutomatic" />

    <Spinner
        android:id="@+id/placeTimeDropdown"
        android:layout_width="@dimen/add_place_input_width"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@+id/placeTimeTextAutomatic"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/startAutomaticMode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/input_margin_top"
        android:text="@string/start_auto_place_button_text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/placeTimeTextAutomatic" />

</androidx.constraintlayout.widget.ConstraintLayout>